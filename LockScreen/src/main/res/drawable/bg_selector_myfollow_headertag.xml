<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="2dp"
                />
            <stroke android:color="#d6d6d6"
                    android:width="1px"
                />
            <solid
                android:color="#f1f1f1"
                />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:radius="2dp"
                />
            <stroke android:color="#d6d6d6"
                    android:width="1px"
                />
            <solid
                android:color="@color/bai"
                />
        </shape>
    </item>
</selector>
