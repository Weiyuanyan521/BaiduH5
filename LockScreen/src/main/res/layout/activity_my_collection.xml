<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_collection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.haokan.screen.lockscreen.activity.ActivityMyCollection">

    <View
        android:id="@+id/divider"
        android:layout_below="@+id/actionbar"
        android:background="@color/actionbar_content_divier_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


    <include layout="@layout/fragment_mycollection_dantu"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/divider"
        android:layout_alignParentStart="true"
        />

    <RelativeLayout
        android:id="@+id/actionbar"
        android:background="@color/bai"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:scaleType="center"
            android:background="@drawable/bg_selector_touming"
            android:src="@drawable/icon_nav_back_n" />

        <TextView
            android:layout_centerInParent="true"
            android:text="@string/my_collection"
            android:textSize="16sp"
            android:textColor="@color/hei_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/edit"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="@string/edit"
            android:textSize="14sp"
            android:textColor="#f16b6b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>


</RelativeLayout>
