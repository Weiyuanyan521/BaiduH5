<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.haokan.screen.view.TopCropImageView
        android:id="@+id/image"
        android:scaleType="matrix"
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/nocontent"
        android:text="图片已经不存在建议编辑/删除"
        android:textColor="#a7a7a7"
        android:textSize="16sp"
        android:maxLines="2"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:drawablePadding="16dp"
        android:drawableTop="@drawable/icon_logo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/choice_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scaleType="center"
        android:src="@drawable/selector_collect_choice_small"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/tv_count"
        android:text="18张"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:background="@drawable/shape_collection_count_bg"
        android:paddingLeft="7dp"
        android:paddingRight="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/icon_arrow"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>