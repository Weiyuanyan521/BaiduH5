<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <View
        android:visibility="gone"
        android:id="@+id/divider"
        android:background="#d8d8d8"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:id="@+id/tv_title"
        android:text="林心如，霍建华唯美婚纱照"
        android:textColor="#333333"
        android:textSize="13sp"
        android:layout_below="@id/divider"
        android:layout_toRightOf="@id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_img_layout"
        android:layout_below="@id/tv_title"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="105dp">

        <ImageView
            android:id="@+id/iv_img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/hei_50" />

        <ImageView
            android:id="@+id/iv_img2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@color/hei_50" />

        <ImageView
            android:id="@+id/iv_img3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@color/hei_50" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_img4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/hei_50" />

            <View
                android:id="@+id/img_black_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/hei_50" />

            <TextView
                android:id="@+id/tv_img_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/icon_home_arrow"
                android:textColor="@color/bai"
                android:textSize="13sp"
                android:text="15张" />
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_update_time"
        android:layout_below="@id/ll_img_layout"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="13dp"
        android:text="1天前"
        android:textSize="10sp"
        android:textColor="#b4b4b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_zan_count"
        android:layout_below="@id/ll_img_layout"
        android:layout_marginTop="12dp"
        android:text="1314人赞过"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:textColor="#b4b4b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>