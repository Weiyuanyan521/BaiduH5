<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_content"
    android:background="@color/default_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/rl_main_top"
        android:layout_width="match_parent"
        android:background="@drawable/bg_screen_up"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    </View>

    <RelativeLayout
        android:id="@+id/rl_main_bottom"
        android:background="@drawable/bg_screen_b"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bottom_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/selector_bottom_back" />

            <View
                android:layout_width="1px"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:background="@color/bai_30" />

            <LinearLayout
                android:id="@+id/bottom_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_bottom_liked" />

                <TextView
                    android:id="@+id/bottom_like_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/selector_click_bai60"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:background="@color/bai_30" />

            <LinearLayout
                android:id="@+id/bottom_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_home_share" />

                <TextView
                    android:id="@+id/bottom_share_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/selector_click_bai60"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:background="@color/bai_30" />

            <LinearLayout
                android:id="@+id/bottom_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_bottom_collection" />

                <TextView
                    android:id="@+id/bottom_collect_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/selector_click_bai60"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:background="@color/bai_30" />

            <ImageView
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/icon_more_white" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@id/bottom_bar"
            android:background="@color/bai_40" />

        <!--<com.haokan.ad.view.MediaView-->
        <!--android:visibility="gone"-->
        <!--android:id="@+id/text_ad_view"-->
        <!--android:layout_above="@id/divider"-->
        <!--android:layout_marginBottom="11dp"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"/>-->

        <!--android:layout_toLeftOf="@id/text_ad_view"-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_tag"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_above="@id/divider"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="8dp"
            android:scrollbars="none"
            android:fadingEdge="horizontal"
            android:requiresFadingEdge="horizontal"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_zutu_part"
            android:layout_above="@id/recy_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_zutu"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_activity_zutu_preview_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scrollbars="none"
                android:requiresFadingEdge="horizontal"
                />

            <TextView
                android:id="@+id/title_zutu"
                android:layout_above="@id/recy_zutu"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:includeFontPadding="false"
                android:typeface="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="324dp"
                android:text=""
                android:textColor="@color/selector_click_bai"
                android:textSize="16sp" />
        </RelativeLayout>

        <ScrollView
            android:visibility="gone"
            android:id="@+id/rl_dantu_part"
            android:foregroundGravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/divider"
            android:layout_marginBottom="8dp"
            android:requiresFadingEdge="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/ll_link"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/tv_link"
                        android:layout_width="wrap_content"
                        android:maxWidth="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:lineSpacingExtra="3dp"
                        android:text="@string/look_more"
                        android:textColor="@color/selector_click_bai"
                        android:textSize="14sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/title_dantu"
                    android:layout_toLeftOf="@id/ll_link"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:includeFontPadding="false"
                    android:maxWidth="324dp"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/selector_click_bai"
                    android:textSize="16sp"
                    android:typeface="normal"
                    />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_below="@id/title_dantu"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clickable="false"
                    android:ellipsize="none"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="3dp"
                    android:text=""
                    android:textColor="@color/bai"
                    android:textSize="13sp"
                    android:typeface="normal"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <include
        android:id="@+id/layout_loading"
        layout="@layout/layout_loading_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <include
        android:id="@+id/layout_net_error"
        layout="@layout/layout_error_net"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="42dp"
        android:visibility="gone"
        />

    <include
        android:id="@+id/layout_no_content"
        layout="@layout/layout_no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="42dp"
        android:visibility="gone"
        />

    <include
        android:id="@+id/download_img_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_download_img"
        android:visibility="gone"/>

</RelativeLayout>