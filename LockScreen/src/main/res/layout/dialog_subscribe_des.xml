<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_subscribe_des"
                android:paddingBottom="17dp"
                android:paddingTop="17dp">

    <LinearLayout
        android:id="@+id/tv_dialog_tv_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/des_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="中国旅游"
                android:textColor="#333333"
                android:textSize="16sp"/>
            <ImageView
                android:src="@drawable/dlg_sub_des_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/des_title"
                />
            <ImageView
                android:src="@drawable/dlg_sub_des_right"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/des_title"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旅游"
                    android:textColor="@color/hei_50"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="30万人订阅"
                    android:textColor="@color/hei_50"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_dialog_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:lineSpacingExtra="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="《中国旅游》杂志是唯一一本旅游信息锁屏设置编辑个人相册时按返回键直接返回到桌面上(调系统相册)锁屏设置编辑个人相册时按返回键直接返回到桌面上(调系统相册)锁屏设置编辑个人相册时按返回键直接返回到桌面上"
                android:textColor="#666666"
                android:textSize="14sp"/>
        </ScrollView>
    </LinearLayout>


    <TextView
        android:id="@+id/btn_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_dialog_tv_layout"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_subscribe_btn"
        android:text="订阅"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/bai"
        android:textSize="14sp"/>

</RelativeLayout>