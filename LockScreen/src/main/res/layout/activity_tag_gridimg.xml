<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_actionbar_tag"
        android:background="@color/bai"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="43dp">
        <ImageButton
            android:id="@+id/ib_back_tag"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/bg_selector_touming"
            android:src="@drawable/icon_back_login" />

        <!--<View-->
            <!--android:id="@+id/divider"-->
            <!--android:layout_toRightOf="@id/ib_back_tag"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="@color/hei_30"-->
            <!--android:layout_width="1px"-->
            <!--android:layout_height="15dp"/>-->

        <TextView
            android:id="@+id/title"
            android:text="xxxx"
            android:textSize="16sp"
            android:textColor="#505050"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:lines="1"
            android:ellipsize="end"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icon_tag"
            android:maxWidth="140dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_share_tag"
            android:src="@drawable/icon_share_cp"
            android:paddingRight="15dp"
            android:paddingLeft="14dp"
            android:layout_alignParentRight="true"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_tag_subscribe"
            android:layout_toLeftOf="@id/iv_share_tag"
            android:text="@string/subscribe"
            android:textSize="13sp"
            android:textColor="#999999"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icon_subscribe_cp"
            android:gravity="center"
            android:paddingRight="8dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_above="@id/rl_actionbar_tag"
        android:background="@color/actionbar_content_divier_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcyv_taggrid"
        android:layout_above="@id/divider"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <include
        android:id="@+id/layout_net_error"
        android:layout_above="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_error_net"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_loading"
        android:layout_above="@id/divider"
        layout="@layout/layout_loading_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
    <include
        android:id="@+id/layout_serve_error"
        android:layout_above="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_error_serve"
        android:visibility="gone"
        />
    <include
        android:id="@+id/layout_no_content"
        android:layout_above="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_error_no_img"
        android:visibility="gone"
        />
</RelativeLayout>