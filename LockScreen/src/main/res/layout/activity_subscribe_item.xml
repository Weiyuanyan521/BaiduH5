<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:background="@color/bai">

    <View
        android:id="@+id/view2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:background="#d8d8d8"/>
<RelativeLayout
    android:layout_toStartOf="@+id/btn_subscribe_ly"
    android:layout_centerVertical="true"
    android:layout_width="wrap_content"
    android:gravity="center_vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/txt_title_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:text="杂志"
            android:textColor="#333333"
            android:textSize="14sp"/>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_alignEnd="@+id/txt_title"
          android:layout_centerVertical="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/hei_50"
            android:text="@string/subscribe_item_des"
            android:background="@drawable/bg_txt_des"
            android:textSize="10sp"/>
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@id/txt_title_ly"
        android:layout_below="@id/txt_title_ly"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_subscribe_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:drawableStart="@drawable/icon_sub_num_pics"
        android:lines="1"
        android:text="30万人订阅"
        android:drawablePadding="6dp"
        android:textColor="#999999"
        android:textSize="10sp"/>
        <TextView
            android:id="@+id/txt_sort_name"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginStart="15dp"
            android:textColor="#999999"
            android:textSize="10sp"
            android:text="旅游"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:scaleType="centerInside"
        android:src="@color/bai"/>

    <LinearLayout
        android:id="@+id/btn_subscribe_ly"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@+id/view2">

        <View
            android:layout_width="1px"
            android:layout_height="50dp"
            android:background="@color/hei_20"/>

        <RelativeLayout
            android:id="@+id/detail_sub_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/btn_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/icon_sub_add"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@string/subscribe_item_add"
                android:textColor="@color/subscribe_item_txt_right"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/btn_has_subscribed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="@string/subscribe_item_cancle"
                android:textColor="@color/hei_50"
                android:visibility="gone"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
