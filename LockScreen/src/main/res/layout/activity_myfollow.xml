<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/actionbar"
        android:background="@color/bai"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/bg_selector_touming_borderless"
            android:src="@drawable/icon_nav_back_n" />

        <TextView
            android:layout_centerInParent="true"
            android:text="@string/myfollow"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/edit"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/edit"
            android:textSize="14sp"
            android:textColor="#f16b6b"
            android:background="@drawable/bg_selector_touming_borderless"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <View
            android:background="#d8d8d8"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy"
        android:requiresFadingEdge="vertical"
        android:layout_below="@id/actionbar"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <include
        android:layout_below="@id/actionbar"
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bai"
        layout="@layout/layout_loading_my"
        android:visibility="gone"
        />

    <include
        android:layout_below="@id/actionbar"
        android:id="@+id/layout_net_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bai"
        layout="@layout/layout_error_net"
        android:visibility="gone"
        />

    <include
        android:layout_below="@id/actionbar"
        android:id="@+id/layout_serve_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bai"
        layout="@layout/layout_error_serve"
        android:visibility="gone"
        />

    <include
        android:layout_below="@id/actionbar"
        android:id="@+id/layout_no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bai"
        layout="@layout/layout_no_content"
        android:visibility="gone"
        />
</RelativeLayout>