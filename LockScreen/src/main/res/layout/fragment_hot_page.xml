            <!--android:clipToPadding="false"-->
            <!--android:paddingBottom="12dp" />-->
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->

    <include
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        layout="@layout/layout_loading_my"/>

    <include
        android:id="@+id/layout_net_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        layout="@layout/layout_error_net"/>

    <include
        android:id="@+id/layout_serve_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_error_serve"
        android:visibility="gone"
        />

    <include
        android:id="@+id/layout_no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_error_no_img"
        android:visibility="gone"
        />
</RelativeLayout>