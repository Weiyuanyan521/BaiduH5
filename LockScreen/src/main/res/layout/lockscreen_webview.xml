<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/bg_selector_touming"
            android:src="@drawable/icon_nav_back_n" />

        <TextView
            android:id="@+id/tv_close"
            android:text="@string/close"
            android:gravity="center"
            android:layout_toRightOf="@id/back"
            android:paddingLeft="5dp"
            android:paddingRight="7dp"
            android:textSize="14sp"
            android:textColor="@color/selector_text_click2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLength="10"
            android:ellipsize="end"
            android:textColor="#7f7f7f"
            android:textSize="16sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_selector_touming"
            android:paddingRight="12dp"
            android:paddingLeft="10dp"
            android:src="@drawable/icon_nav_more"
            />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"/>

    <ProgressBar
        android:id="@+id/progress_horizontal"
        android:layout_alignParentBottom="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:max="100"
        android:progressDrawable="@drawable/loading_progress" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/webView_wrapper"
        android:layout_below="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"   >
    </FrameLayout>


    <!--<WebView-->
        <!--android:id="@+id/webView"-->
        <!--android:layout_below="@+id/rl_actionbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"   >-->
    <!--</WebView>-->

    <include
        android:id="@+id/layout_loading"
        layout="@layout/layout_loading_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
    />
</RelativeLayout>