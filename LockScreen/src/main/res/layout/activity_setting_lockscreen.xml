<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bai">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_selector_touming"
            android:scaleType="center"
            android:src="@drawable/icon_nav_back_n" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/settings"
            android:textColor="#333333"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_actionbar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/rl_actionbar" />

    <TextView
        android:id="@+id/txt_copyRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/app_copyright"
        android:textColor="#c0c0c0"
        android:textSize="12sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txt_copyRight"
        android:layout_below="@+id/v_actionbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bai"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/txt_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selector_bai"
                android:minHeight="@dimen/setting_itemh"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/icon_subscribe_injoo_setting" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/subscribe_center"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/txt_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selector_bai"
                android:minHeight="@dimen/setting_itemh"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/icon_collection_injoo_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/my_collection"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/txt_personal_DCIM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selector_bai"
                android:minHeight="@dimen/setting_itemh"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/icon_dicm_injoo_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/personal_DCIM"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:background="#d8d8d8" />


            <RelativeLayout
                android:id="@+id/txt_update_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selector_bai"
                android:minHeight="@dimen/setting_itemh"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <ImageView
                    android:id="@+id/iv_update_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/icon_offline_update_injoo_setting" />

                <TextView
                    android:id="@+id/txt_update_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="15dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/update_lockscreen_picture" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/ll_auto_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selector_bai"
                android:minHeight="@dimen/setting_itemh"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <ImageView
                    android:id="@+id/img_update"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/icon_offlineup_sw_injoo_setting" />

                <TextView
                    android:id="@+id/switch_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/switch_off" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="30dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|start"
                        android:text="@string/auto_update_lockscreen_picture" />

                    <TextView
                        android:id="@+id/txt_update_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/textView2"
                        android:layout_below="@id/textView2"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:gravity="center_vertical|start"
                        android:text="@string/no_update_dialog"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/ll_content_recom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selector_bai"
                android:minHeight="@dimen/setting_itemh"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <ImageView
                    android:id="@+id/img_recom"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/icon_offline_update_rem" />

                <TextView
                    android:id="@+id/switch_button_recom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/switch_off" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="30dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_recom_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|start"
                        android:text="@string/content_recommend" />

                    <TextView
                        android:id="@+id/txt_recom_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/txt_recom_title"
                        android:layout_below="@id/txt_recom_title"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:gravity="center_vertical|start"
                        android:text="@string/auto_get_recommend_content"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:background="#d8d8d8" />

            <RelativeLayout
                android:id="@+id/txt_checkupdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_selector_bai"
                android:minHeight="@dimen/setting_itemh"
                android:paddingEnd="14dp"
                android:paddingStart="14dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/icon_update_injoo_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/check_update"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!--<TextView-->
            <!--android:id="@+id/txt_checkupdata"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/setting_itemh"-->
            <!--android:background="@drawable/bg_selector_bai"-->
            <!--android:drawableStart="@drawable/icon_update"-->
            <!--android:drawablePadding="7dp"-->
            <!--android:gravity="center_vertical"-->
            <!--android:paddingStart="14dp"-->
            <!--android:paddingEnd="14dp"-->
            <!--android:text="@string/check_update"-->
            <!--android:textColor="#666666"/>-->

            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="15dp"
                android:text="info"
                android:textColor="#c0c0c0"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

