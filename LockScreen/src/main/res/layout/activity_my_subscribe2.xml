<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_cp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbar">
    </android.support.v7.widget.RecyclerView>
    <include
        android:id="@+id/loading_layout"
        layout="@layout/layout_loading_native1"
        android:visibility="gone" />
    <include
        android:id="@+id/layout_net_error"
        layout="@layout/layout_error_net"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="42dp"
        android:visibility="gone"
        />

    <include
        android:id="@+id/layout_no_content"
        layout="@layout/layout_no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="42dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/actionbar"
        android:background="@color/bai"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/bg_selector_touming_borderless"
            android:src="@drawable/icon_nav_back_n" />

        <TextView
            android:layout_centerInParent="true"
            android:text="@string/subscribe_center"
            android:textSize="16sp"
            android:textColor="@color/hei_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:background="#d8d8d8"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>
</RelativeLayout>