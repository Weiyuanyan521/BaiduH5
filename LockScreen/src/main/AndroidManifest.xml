<manifest xmlns:android="http://schemas.android.com/apk/res/android"

          package="com.haokan.lockscreen"
>

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
    <!--好看锁屏的privider需要的权限-->
    <uses-permission android:name="${applicationId}.haokan.provider.READ_WRITE" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />

    <!-- 获取mac地址作为用户的备用唯一标识 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 获取用户手机的IMEI，用来唯一的标识用户 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- QQ、QQ空间所需权限 -->
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >

        <activity android:name="com.haokan.lockscreen.activity.LockMainActivity"
                  android:launchMode="singleInstance"
                  android:theme="@style/myTransparent"
                  android:screenOrientation="portrait">
        </activity>

        <service
            android:name="com.haokan.lockscreen.service.LockScreenService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name="com.haokan.lockscreen.receiver.LockScreenBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <!--<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />-->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!--来自好看appbase begin-->
        <service
            android:name="com.haokan.statistics.service.HaoKanMaiDianService"
            android:label="LogCollection">
            <intent-filter>
                <action android:name="com.haokan.service.logcollection" />
            </intent-filter>
        </service>

        <service
            android:name="com.haokan.screen.lockscreen.offline.AlarmOfflineService"
            android:exported="true"
            android:process=":haokanofflineservice">
            <intent-filter>
                <action android:name="com.haokan.service.offline" />
            </intent-filter>
        </service>
        <provider
            android:name="com.haokan.screen.lockscreen.provider.HaokanProvider"
            android:authorities="${applicationId}.haokan.provider"
            android:exported="true"
            />
        <activity
            android:name="com.haokan.screen.lockscreen.activity.ActivitySetting"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="com.haokan.setting" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.haokan.screen.lockscreen.activity.ActivityWebView"
            android:process=":lockwebview"
            android:launchMode="singleInstance"
            android:exported="true"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="com.haokan.webview" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.haokan.screen.lockscreen.activity.ActivityMySubscribe2"
            />
        <activity
            android:name="com.haokan.screen.lockscreen.activity.ActivityMyCollection"
            />
        <activity
            android:name="com.haokan.screen.lockscreen.activity.ActivityMyCollection_Detail"
            />
        <activity
            android:name="com.haokan.screen.lockscreen.activity.ActivityMyDCIM2"
            android:launchMode="singleTask"
            />
        <activity
            android:name="com.haokan.screen.lockscreen.activity.ActivityCropPicture"
            />
        <activity
            android:name="com.haokan.screen.lockscreen.activity.ActivityItemDetail_DCIM"
            android:launchMode="singleTask"
            />
        <!-- Register AnalyticsReceiver and AnalyticsService to support background
      dispatching on non-Google Play devices. -->
        <!--<receiver android:name="com.google.android.gms.analytics.AnalyticsReceiver"-->
        <!--android:enabled="true">-->
        <!--<intent-filter>-->
        <!--<action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />-->
        <!--</intent-filter>-->
        <!--</receiver>-->
        <!--<service android:name="com.google.android.gms.analytics.AnalyticsService"-->
        <!--android:enabled="true"-->
        <!--android:exported="false"/>-->

        <!--阿里云热修复  各个产品id需要不一样防止更新错误-->
        <meta-data
            android:name="com.taobao.android.hotfix.IDSECRET"
            android:value="24527645-1" />
        <meta-data
            android:name="com.taobao.android.hotfix.APPSECRET"
            android:value="7105ad8417da068390367499d3deb1cd" />
        <meta-data
            android:name="com.taobao.android.hotfix.RSASECRET"
            android:value="" />

        <service android:name="com.haokan.screen.service.KillSelfService"
                 android:process=":kill_server"/>
        <!--来自好看appbase end-->
    </application>
</manifest>
