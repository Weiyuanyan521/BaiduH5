<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/content">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/bai" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/drawable_selector_touming_borderless"
            android:src="@drawable/icon_back_1" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:background="@drawable/drawable_selector_touming_borderless"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ProgressBar
        android:id="@+id/progress_horizontal"
        android:layout_below="@id/title_layout"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:max="100"
        android:progressDrawable="@drawable/drawable_layer_webview_loading_line" />

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_alignParentBottom="true"
        android:background="@color/bai"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <View
            android:background="#d8d8d8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/writecomment"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="15dp"
            android:text="写评论"
            android:textSize="13sp"
            android:textColor="#444444"
            android:drawableLeft="@drawable/icon_write_comment"
            android:drawablePadding="3dp"
            android:paddingLeft="13dp"
            android:gravity="center_vertical"
            android:background="@drawable/drawable_shape_tvcomment_bg"
            android:layout_width="184dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_share"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_share"
            android:background="@drawable/drawable_selector_touming_borderless"
            android:layout_width="48dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_collect"
            android:scaleType="centerInside"
            android:layout_toLeftOf="@id/iv_share"
            android:src="@drawable/drawable_selector_collect"
            android:background="@drawable/drawable_selector_touming_borderless"
            android:layout_width="48dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/lookcomment"
            android:scaleType="centerInside"
            android:layout_toLeftOf="@id/iv_collect"
            android:src="@drawable/icon_comment"
            android:background="@drawable/drawable_selector_touming_borderless"
            android:layout_width="48dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_below="@+id/divider"
        android:layout_above="@id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </WebView>

    <include
        android:visibility="gone"
        android:layout_below="@+id/divider"
        android:id="@+id/adwrapper1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        layout="@layout/activity_webview_ad1"
        />

    <include
        android:visibility="gone"
        android:id="@+id/adwrapper2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@id/bottom_bar"
        layout="@layout/activity_webview_ad2"
        />

    <include
        android:visibility="gone"
        android:id="@+id/bottom_share"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_bottom_share"
        />

    <FrameLayout
        android:id="@+id/bigvideoview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>