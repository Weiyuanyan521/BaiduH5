<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <!--app:tabPadding="0dp"-->
        <!--app:tabPaddingStart="15dp"-->
        <!--app:tabPaddingEnd="15dp"-->
        <!--app:tabBackground="@color/touming"-->
    <ImageView
        android:id="@+id/edit_channel"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:background="@drawable/drawable_selector_bai"
        android:src="@drawable/ic_editchannel"
        android:layout_width="44dp"
        android:layout_height="44dp"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_toLeftOf="@id/edit_channel"
        android:layout_marginRight="1px"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_h"
        app:tabMinWidth="1dp"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorColor="@color/hong"
        app:tabMode="scrollable"
        app:tabTextColor="#555555"
        app:tabSelectedTextColor="@color/hong"
        android:requiresFadingEdge="horizontal"
        android:fadingEdgeLength="30dp"
        android:background="@color/bai"
        />


    <View
        android:id="@+id/divider"
        android:layout_below="@id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d8d8d8"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_below="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>