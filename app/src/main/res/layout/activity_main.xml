<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:background="@color/bai"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="47dp">
        <TextView
            android:id="@+id/tab_homepage"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/color_selector_tabmain"
            android:textSize="10sp"
            android:drawableTop="@drawable/drawable_selector_tab_homepage"
            android:paddingTop="6dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tab_vidopage"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/color_selector_tabmain"
            android:textSize="10sp"
            android:drawableTop="@drawable/drawable_selector_tab_video"
            android:paddingTop="6dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tab_imagepage"
            android:gravity="center"
            android:text="图片"
            android:textColor="@color/color_selector_tabmain"
            android:textSize="10sp"
            android:drawableTop="@drawable/drawable_selector_tab_image"
            android:paddingTop="6dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tab_personpage"
            android:gravity="center"
            android:text="个人"
            android:textColor="@color/color_selector_tabmain"
            android:textSize="10sp"
            android:drawableTop="@drawable/drawable_selector_tab_personpage"
            android:paddingTop="6dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_above="@id/bottom_bar"
        android:background="@color/actionbar_content_divier_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_above="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_startlock"
        android:background="@color/hei_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_image"
            android:src="@drawable/ic_startlockbg"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_below="@id/iv_image"
            android:src="@drawable/ic_lockclose"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <View
            android:id="@+id/startlock"
            android:layout_alignBottom="@id/iv_image"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="140dp"
            android:layout_height="50dp"/>
    </RelativeLayout>

